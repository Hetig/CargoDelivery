<Window x:Class="CargoDelivery.Client.Views.CreateCourier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CargoDelivery.Client.Views"
        mc:Ignorable="d"
        Title="Создание курьера" Height="400" Width="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0" Text="Имя курьера:" VerticalAlignment="Center" Margin="10"/>
        <TextBox x:Name="NameTextBox" Grid.Row="1" Margin="10"/>
        <Button Grid.Row="2" Content="Сохранить" Command="{Binding SaveCommand}" 
                Height="30" Width="100" Margin="20" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Window>